<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.LandingFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/img_onboard_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="12dp"
            android:elevation="10dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="42sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <View
                android:layout_width="24dp"
                android:layout_height="8dp"
                android:background="@drawable/stylish_divider_colored" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/stylish_divider_blackish" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/stylish_divider_blackish" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="18dp"
            android:text="Real-time GPS Based Truck Tracking"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="8dp"
            android:text="GPS Tracking and Truck Management Features. Protect your Vehicle from unauthorized activity."
            android:textAlignment="center"
            android:textColor="@color/semiblack"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_bg_round"
            android:clickable="true"
            android:clipToOutline="true"
            android:elevation="8dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="16dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Next"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_forward"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>